{
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.1",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "tailwindcss": "^3.0.24"
  },
  "scripts": {
    "jekyll:dev": "bundle exec jekyll serve --incremental --watch --livereload",
    "jekyll:build": "bundle exec jekyll build",
    "css:build": "postcss ./_tailwind/tailwind.css -o ./assets/css/tailwind.css --minify",
    "css:watch": "postcss ./_tailwind/tailwind.css -o ./assets/css/tailwind.css --watch"
  }
}
